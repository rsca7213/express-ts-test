{
  "compilerOptions": {
    "target": "ES2022",                                  
    "module": "CommonJS",                                
    "esModuleInterop": true,                           
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true,
    "rootDir": "./",
    "outDir": "./dist",
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "dist"]
}
